{% extends 'base.html.twig' %}

{% block title %}FacTech home page{% endblock %}

{% block body %}
{% include 'components/navbar.html.twig' %}

<div class="flex mt-4 ml-4">
    {% include 'components/sidebar.html.twig' %}

    <div class="flex-1 p-4">
        <div class="mb-4 ml-4">
            <h1 class="text-2xl text-blue-color font-semibold font-nunito dark:text-white">Bonjour {{ app.user.surname }}</h1>
            <p class="text-base text-blue-color font-semibold font-nunito dark:text-white">Qu'allons-nous faire aujourd'hui ?</p>
        </div>

        <div class="flex flex-wrap overflow-x-auto">
            <div class="w-full md:w-1/2 p-4">
                <div class="bg-white rounded-lg shadow p-5 h-48 flex items-center justify-center shadow  dark:bg-gray-800">
                    <div class="text-center">
                        <i class="fas fa-building text-blue-color text-4xl mb-4 dark:text-white"></i>
                        <h2 class="text-lg font-semibold font-nunito text-blue-color dark:text-white">Informations de vos formations</h2>
                        <a href="{{ path('app_produit_index') }}" class="text-base  font-semibold font-nunito text-blue-color dark:text-white">Ajouter une nouvelle formation</a>
                    </div>
                </div>
            </div>

            <div class="w-full md:w-1/2 p-4">
                <div class="bg-white rounded-lg shadow p-5 h-48 flex items-center justify-center shadow  dark:bg-gray-800 dark:text-gray-400">
                    <div class="text-center">
                        <i class="fas fa-dollar-sign text-blue-color text-4xl mb-4 dark:text-white"></i>
                        <h2 class="text-lg font-semibold font-nunito text-blue-color dark:text-white">Historique de vos paiements</h2>
                        <a href="{{ path('app_paiement_index') }}" class="text-base  font-semibold font-nunito text-blue-color dark:text-white">Ajouter un nouveau paiement</a>
                    </div>
                </div>
            </div>

            <div class="w-full md:w-1/2 p-4">
                <div class="bg-white rounded-lg shadow p-5 h-48 flex items-center justify-center shadow  dark:bg-gray-800 dark:text-gray-400">
