{% extends 'base.html.twig' %}

{% block title %}Edit Societe{% endblock %}

{% block body %}
    {% include 'components/navbar.html.twig' %}

    <div class="flex flex-wrap mt-4">
        {% include 'components/sidebar.html.twig' %}

        <div class="flex-grow p-4 bg-white dark:bg-gray-800 rounded-lg shadow ml-4 mr-4">
            <h1 class="mb-4 text-lg font-bold font-nunito text-blue-color dark:text-white">Modifier les informations d'une société</h1>

            {# <div>
                {{ include('societe/_form.html.twig', {'button_label': 'Update'}) }}
            </div> #}

            {{ form_start(form, {'attr': {'class': 'space-y-6'}}) }}
            <div class="flex flex-col items-center mb-4">
                <label for="{{ form.avatar_logoFile.vars.id }}" class="px-4 py-2 bg-blue-color text-white rounded-lg">
                    Télécharger une nouvelle photo de profil
                </label>
                {{ form_widget(form.avatar_logoFile, {'attr': {'class': 'text-white'}}) }}
            </div>

            <div class="flex flex-col sm:flex-row gap-4">
                <div class="w-full sm:w-1/2">
                    {{ form_label(form.raison_sociale, 'Raison Sociale', {'label_attr': {'class': 'mb-1 text-sm font-semibold font-nunito text-blue-color dark:text-white'}}) }}
                    {{ form_widget(form.raison_sociale, {'attr': {'class': 'border border-gray-200 bg-blue-color-opacity text-blue-color font-nunito p-2 rounded-lg w-full dark:bg-gray-700 dark:border-gray-700 dark:text-gray-400'}}) }}
                </div>
                <div class="w-full sm:w-1/2">
                    {{ form_label(form.num_siret, 'Numéro SIRET', {'label_attr': {'class': 'mb-1 text-sm font-semibold font-nunito text-blue-color dark:text-white'}}) }}
                    {{ form_widget(form.num_siret, {'attr': {'class': 'border border-gray-200 bg-blue-color-opacity text-blue-color font-nunito p-2 rounded-lg w-full dark:bg-gray-700 dark:border-gray-700 dark:text-gray-400'}}) }}
                </div>
            </div>

            <div class="flex flex-col sm:flex-row gap-4">
                <div class="w-full sm:w-1/2">
                    {{ form_label(form.adresse, 'Adresse', {'label_attr': {'class': 'mb-1 text-sm font-semibold font-nunito text-blue-color dark:text-white'}}) }}
                    {{ form_widget(form.adresse, {'attr': {'class': 'border border-gray-200 bg-blue-color-opacity text-blue-color font-nunito p-2 rounded-lg w-full dark:bg-gray-700 dark:border-gray-700 dark:text-gray-400'}}) }}
                </div>
                <div class="w-full sm:w-1/2">
                    {{ form_label(form.code_postal, 'Code Postal', {'label_attr': {'class': 'mb-1 text-sm font-semibold font-nunito text-blue-color dark:text-white'}}) }}
                    {{ form_widget(form.code_postal, {'attr': {'class': 'border border-gray-200 bg-blue-color-opacity text-blue-color font-nunito p-2 rounded-lg w-full dark:bg-gray-700 dark:border-gray-700 dark:text-gray-400'}}) }}
                </div>
            </div>

            <div class="flex flex-col sm:flex-row gap-4">
                <div class="w-full sm:w-1/2">
                    {{ form_label(form.ville, 'Ville', {'label_attr': {'class': 'mb-1 text-sm font-semibold font-nunito text-blue-color dark:text-white'}}) }}
                    {{ form_widget(form.ville, {'attr': {'class': 'border border-gray-200 bg-blue-color-opacity text-blue-color font-nunito p-2 rounded-lg w-full dark:bg-gray-700 dark:border-gray-700 dark:text-gray-400'}}) }}
                </div>
                <div class="w-full sm:w-1/2">
                    {{ form_label(form.email, 'Email', {'label_attr': {'class': 'mb-1 text-sm font-semibold font-nunito text-blue-color dark:text-white'}}) }}
                    {{ form_widget(form.email, {'attr': {'class': 'border border-gray-200 bg-blue-color-opacity text-blue-color font-nunito p-2 rounded-lg w-full dark:bg-gray-700 dark:border-gray-700 dark:text-gray-400'}}) }}
                </div>
            </div>

            <div class="flex flex-col sm:flex-row gap-4">
                <div class="w-full sm:w-1/2">
                    {{ form_label(form.num_tel, 'Numéro de Téléphone', {'label_attr': {'class': 'mb-1 text-sm font-semibold font-nunito text-blue-color dark:text-white'}}) }}
                    {{ form_widget(form.num_tel, {'attr': {'class': 'border border-gray-200 bg-blue-color-opacity text-blue-color font-nunito p-2 rounded-lg w-full dark:bg-gray-700 dark:border-gray-700 dark:text-gray-400'}}) }}
                </div>
                <div class="w-full sm:w-1/2">
                    {{ form_label(form.num_fix, 'Numéro Fixe', {'label_attr': {'class': 'mb-1 text-sm font-semibold font-nunito text-blue-color dark:text-white'}}) }}
                    {{ form_widget(form.num_fix, {'attr': {'class': 'border border-gray-200 bg-blue-color-opacity text-blue-color font-nunito p-2 rounded-lg w-full dark:bg-gray-700 dark:border-gray-700 dark:text-gray-400'}}) }}
                </div>
            </div>

            <div class="text-right mt-4">
                <button type="submit" class="px-4 py-2 bg-blue-color text-white rounded-lg">Enregistrer</button>
            </div>

            {{ form_end(form) }}

            <div class="flex justify-end space-x-4 mt-4">
                <form method="post" action="{{ path('app_societe_delete', {'slug': societe.slug}) }}" onsubmit="return confirm('Etes vous sure de vouloir supprimer ce produit?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ societe.slug) }}">
                    <button class="px-4 py-2 bg-blue-color text-white rounded-lg">Delete</button>
                </form>
            </div>
            <a href="{{ path('app_societe_index') }}" class=" text-left text-blue-color hover:text-blue-600 dark:hover:text-blue-400 dark:text-white">
                <i class="fas fa-arrow-left"></i> Retour
            </a>
        </div>
    </div>
{% endblock %}
